 ** â€¢ more thorough DOCTYPE scanning (less greedy)
 **/

{
	name = "XML";
	
	fileTypes = ( xml, plist, tld, jsp, xslt );

	foldingStartMarker = "^\\s*(<[^!?%/](?!.+?(/>|</.+?>))|<[!%]--(?!.+?--%?>)|<%[!]?(?!.+?%>))";
	foldingStopMarker  = "^\\s*(</[^>]+>|[/%]>|-->)\\s*$";

    /*
     * Don't indent:
     *  <?, </, <!
     *  <whatever></whatever>
     *  <whatever />
     *  <% %>
     *  <!-- -->
     *  <%-- --%>
     *
     * Do indent:
     *  <whatever>
     *  <%
     *  <!--
     *  <%--
     */
    increaseIndentPattern = "^\\s*<([^!/?]|%)(?!.+?([/%]>|</.+?>))";
    
	foregroundColor = "#333333";
	backgroundColor = "#ffffff";

	smartTypingPairs = (
	    ( "(", ")" ),
		( "[", "]" ),
		( "{", "}" ),
		( "\"", "\"" ),
	);

	highlightPairs = (
	    ( "(", ")" ),
		( "[", "]" ),
		( "{", "}" ),
		( "\"", "\"" ),
		( "<", ">" ),
	);

	patterns = (
		/* processing instructions */
		{
			name = "meta.docinfo.processing.xml";
			begin = "<\\?\\s*[-_a-zA-Z0-9]+";
			end = "\\?>";

			foregroundColor = "#888888";

			patterns = (
	  			{ name = "keywords.markup.tag.options.xml"; match = " ([a-zA-Z\-]+)"; },
	  			{ name = "strings.double-quoted.html"; begin = "\""; end = "\"";  foregroundColor = "#CC3300";},
				{ name = "strings.single-quoted.html"; begin = "'"; end = "'"; fontStyle = (  ); foregroundColor = "#CC3300";	},
			);
		},
		
		/* doctype */
		{
			name = "meta.docinfo.doctype.html";
			begin = "<!(DOCTYPE)";
			end = ">";

			"elementForegroundColor[1]" = "#888888";

			patterns = (
				{
					begin = "<!(ENTITY)\\s([-_a-zA-Z0-9]+)";
					end = ">";
					
					"elementForegroundColor[1]" = "#888888";
					"elementForegroundColor[2]" = "#6600CC";
				
					patterns = (
	  					{ name = "strings.double-quoted.html"; begin = "\""; end = "\"";  foregroundColor = "#CC3300";},
						{ name = "strings.single-quoted.html"; begin = "'"; end = "'"; fontStyle = (  ); foregroundColor = "#CC3300";	},
					);
				},
			);
		},
		
		/* comments */
		{
			name = "comments.block.xml";
			begin = "<[!%]--";
			end = "--%?>";
			foregroundColor = "red";
		},
		
		/* nodes */
		{
			name = "keywords.markup.tags.xml";					// "tags" in HTML; want them to be colored similarly.
			begin = "</?([-_a-zA-Z0-9]+)(:[-_a-zA-Z0-9:]+)?";
			end = "(/?)>";
			
	  		"elementFontStyle[1]" = ( underline ); 
	  		"elementFontStyle[2]" = ( underline ); 

	  		foregroundColor = "#0066CC";
			"elementForegroundColor[1]" = "#0066CC";

			"elementForegroundColor[2]" = "#670079";
			
			patterns = (
	  			{ name = "keywords.markup.tag.options.xml"; match = " ([a-zA-Z\-]+)"; },
	  			{ name = "strings.double-quoted.html"; begin = "\""; end = "\"";  foregroundColor = "#CC3300";},
				{ name = "strings.single-quoted.html"; begin = "'"; end = "'"; fontStyle = (  ); foregroundColor = "#CC3300";	},
			);
		},

		/* entities */
		{ name = "constants.character-entities.html"; match = "&([a-zA-Z0-9_-]+|#[0-9]+|#x[0-9a-fA-F]+);"; foregroundColor = "#6600CC"; },
		{ name = "invalid.bad-ampersand.html"; match = "&"; backgroundColor = "#CC3300"; foregroundColor = "#ffffff"; },
		
        /* jsp page properties */
 		{
			name = "embedded.jsp-props";  // JSP page properties
			backgroundColor = "#A0C544";
			begin = "<%@";
			patterns = (
				{ match = "page|include|taglib"; foregroundColor = "red"; },
			);
			end = "%>";
		},
		
        /* embedded java */
		{
			name = "embedded.java";
			backgroundColor = "#E5E5E5";
			begin = "<%[!=]?(?!--)";
			patterns = ( { include = "Java Source"; } );
			end = "(?!--)%>";
		},
	);
}